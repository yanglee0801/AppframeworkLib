<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/main_lout"
    android:background="@drawable/popbackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_cancle"
        android:background="@color/color_ffffff"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_leave_type1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:gravity="center"
            android:text="事假"
            android:textColor="#161616"
            android:textSize="@dimen/sp_17"
             />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d5d5d5" />

        <TextView
            android:id="@+id/tv_leave_type2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:gravity="center"
            android:text="病假"
            android:textColor="#161616"
            android:textSize="@dimen/sp_17"
              />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d5d5d5" />

        <TextView
            android:id="@+id/tv_leave_type3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_43"
            android:gravity="center"
            android:text="其他"
            android:textColor="#161616"
            android:textSize="@dimen/sp_17"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:background="#d5d5d5" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_cancle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8px"
        android:background="@color/color_ffffff"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_2692ff"
        android:textSize="@dimen/sp_17"
        />

</RelativeLayout>
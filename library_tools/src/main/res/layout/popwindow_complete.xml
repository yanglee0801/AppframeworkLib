<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/popbackground">

    <RelativeLayout
        android:layout_width="@dimen/dp_290"
        android:layout_height="@dimen/dp_175"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_shape_unbindchild_pop"
    >

        <TextView
            android:id="@+id/tv_descri"
            android:layout_width="@dimen/dp_208"
            android:layout_height="@dimen/dp_50"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_38"
            android:gravity="center"
            android:text="确定撤销请假申请吗？"
            android:textColor="#161616"
            android:textSize="@dimen/sp_16"
           />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dip"
            android:layout_above="@+id/ll_cancel_sure"
            android:background="#f2f2f2" />

        <LinearLayout
            android:id="@+id/ll_cancel_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
          >

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/theme_color_bule"
                android:textSize="@dimen/sp_16" />

            <TextView
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="#f2f2f2" />

            <TextView
                android:id="@+id/update"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/theme_color_bule"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mine.MineFragment">

    <!-- TODO: Update blank fragment layout -->


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/dp_200"
              android:background="@drawable/myselfheaderbgd"
           >
              
              <ImageView
                  android:id="@+id/iconImage"
                  android:layout_width="48dp"
                  android:layout_height="48dp"
                  android:layout_marginLeft="@dimen/dp_40"
                  android:background="@drawable/portrait_defalut"
                  android:layout_centerVertical="true"
                  />

              <TextView
                  android:id="@+id/iconName"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color_ffffff"
                  android:layout_toRightOf="@id/iconImage"
                  android:layout_marginLeft="@dimen/dp_10"
                  android:textSize="@dimen/dp_17"
                  android:layout_centerVertical="true"
                  android:text=""
                  />

              <Button
                  android:layout_width="10dp"
                  android:layout_height="20dp"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:layout_margin="@dimen/dp_15"
                  android:background="@drawable/rightjiantouwhite"
                  />
          </RelativeLayout>
            <com.yuanhy.library_tools.view.RewriteListViewHeight
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MLPersonListView"
                android:divider="@null"
                >

            </com.yuanhy.library_tools.view.RewriteListViewHeight>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f2f2f2"
                >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/collectIcon"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                     />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/collectText"
                    android:textColor="@color/color_000000"
                    android:text="我的收藏"
                    android:textSize="@dimen/dp_17"
                    android:layout_toRightOf="@id/collectIcon"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_f2f2f2"
                >
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/settingIcon"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/settingIcon"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/setingText"
                        android:layout_centerVertical="true"
                        android:textColor="@color/color_000000"
                        android:text="设置"
                        android:textSize="@dimen/dp_17"


                        android:layout_gravity="center"
                        />
                    <TextView

                        android:background="@color/color_f2f2f2"
                        android:layout_alignParentBottom="true"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_1" />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <ImageView
                    android:id="@+id/feedbackIcon"
                    android:layout_width="@dimen/dp_30"
                    android:layout_height="@dimen/dp_30"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginBottom="@dimen/dp_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/feedbackText"
                    android:textColor="@color/color_000000"
                    android:text="功能反馈"
                    android:textSize="@dimen/dp_17"
                    android:layout_toRightOf="@id/feedbackIcon"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</FrameLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
   >

    <include layout="@layout/title_base_lout"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_ffffff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <!-- 请假类型 -->

                <TextView
                    android:id="@+id/tv_leave_type_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_21"
                    android:text="请假类型"
                    android:textColor="#161616"
                    android:textSize="@dimen/sp_15"
                     />

                <RelativeLayout
                    android:id="@+id/rl_leave_type"
                    android:layout_width="@dimen/dp_225"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_15"
                   >

                    <TextView
                        android:id="@+id/tv_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="请选择类型"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_15"
                         />

                    <ImageView
                        android:id="@+id/iv_type"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/leave_next"
                          />
                </RelativeLayout>

                <View
                    android:id="@+id/view_line1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_below="@+id/tv_leave_type_hint"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_21"
                    android:background="#d5d5d5"
                   />
                <!-- 开始时间 -->

                <TextView
                    android:id="@+id/tv_start_time_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line1"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_21"
                    android:text="请假时间"
                    android:textColor="#161616"
                    android:textSize="@dimen/sp_15"
                    />

                <RelativeLayout
                    android:id="@+id/rl_leave_time"
                    android:layout_width="@dimen/dp_275"
                    android:layout_height="@dimen/dp_45"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/view_line1"
                    android:layout_marginTop="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_15"
                     >

                    <TextView
                        android:id="@+id/tv_time_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dp_15"
                        android:text="请选择时间"
                        android:textColor="#999999"
                        android:textSize="@dimen/sp_15"
                       />

                    <ImageView
                        android:id="@+id/iv_time"
                        android:layout_width="@dimen/dp_8"
                        android:layout_height="@dimen/dp_15"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/leave_next"
                        />
                </RelativeLayout>

                <View
                    android:id="@+id/view_line2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dip"
                    android:layout_below="@+id/tv_start_time_hint"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_21"
                    android:background="#d5d5d5"
                    />
                <!-- 请假详情 -->

                <TextView
                    android:id="@+id/tv_leave_descri_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view_line2"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_21"
                    android:text="请假详情"
                    android:textColor="#161616"
                    android:textSize="@dimen/sp_15"
                     />

                <EditText
                    android:id="@+id/et_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_leave_descri_hint"
                    android:layout_marginLeft="30px"
                    android:layout_marginRight="30px"
                    android:layout_marginTop="42px"
                    android:background="@drawable/button_shape_white"
                    android:gravity="left|top"
                    android:hint="请输入详情..."
                    android:inputType="textMultiLine"
                    android:maxLines="8"
                    android:minLines="5"
                    android:padding="@dimen/dp_10"
                    android:textColor="#161616"
                    android:textColorHint="#999999"
                    android:textCursorDrawable="@drawable/edit_cursor_color"
                    android:textSize="@dimen/sp_16"
                    />
                <!-- 提交 -->

                <TextView
                    android:id="@+id/submit"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_42"
                    android:layout_below="@id/et_text"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_21"
                    android:background="@drawable/button_shape_green"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/sp_18"
                    />

                <RelativeLayout
                    android:id="@+id/rl_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/popbackground"
                    android:visibility="gone">

                    <ProgressBar
                        android:id="@+id/pb_login"
                        style="@android:style/Widget.ProgressBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>